//-
    Index

extends layout/_layout

//-
    Application Content

block content
    // .trimmed-bg CSS class can be removed, then background will cover all available white spaces
    .desktop-view.trimmed-bg
    h1.hidden Github Issues Application - Created by Mateusz Archici≈Ñski
    main.app-window
        nav(role="navigation" class="app-navbar")
            .osx-buttons.osx-buttons-js
                button(type="button" aria-label="To close application window" class="osx-buttons__close")
                button(type="button" aria-label="To minimize application window" class="osx-buttons__minimize")
                button(type="button" aria-label="To maximize application window" class="osx-buttons__maximize")
            ul.nav-list
                li
                    button(type="button" data-status="all" class="nav-button nav-button-js")
                        span(aria-hidden="true" class="icon icon-small icon-github nav-button__icon")
                        span.nav-button__info All
                        span.nav-button__issues-count 12
                li
                    button(type="button" data-status="opened" class="nav-button nav-button-js")
                        span(aria-hidden="true" class="icon icon-small icon-issues-opened nav-button__icon")
                        span.nav-button__info Open
                        span.nav-button__issues-count 4
                li
                    button(type="button" data-status="closed" class="nav-button nav-button-js")
                        span(aria-hidden="true" class="icon icon-small icon-issues-closed nav-button__icon")
                        span.nav-button__info Closed
                        span.nav-button__issues-count 8
